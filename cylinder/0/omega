FoamFile
{
	version     2.0;
	format      ascii;
	class       volScalarField;
	location    "0";
	object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../constant/parameters"

dimensions [0 0 -1 0 0 0 0];

internalField uniform $omega_0;

boundaryField
{
	walls
	{
		type  omegaWallFunction;
		value uniform $omega_0;
	}

	inlet
	{
		type  omegaWallFunction;
		value uniform $omega_0;
	}

	outlet
	{
		type  omegaWallFunction;
		value $internalField;
	}

	cylinder
	{
		type  omegaWallFunction;
		value uniform $omega_0;
	}
  
	frontAndBack
  {
  	type empty;
  }
}


