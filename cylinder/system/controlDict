FoamFile
{
	version     2.0;
	format      ascii;
	class       dictionary;
	location    "system";
	object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../constant/parameters"

application     pisoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         $end_time;

deltaT          $delta_t;

//maxCo           0.5; // Or other Courant number you wish

adjustTimeStep  no; // yes or no 

//writeControl    adjustableRunTime;
writeControl    runTime;
//writeControl    timeStep;

writeInterval   0.1;
//timeInterval    1;
//writeFrequency  1;

purgeWrite      0; //number of existing direcories at any time (0 = disable)

writeFormat     binary; //or ascii

writePrecision  6;

timeFormat      general;

timePrecision   13;

runTimeModifiable true;

writeCompression  off;

// ************************************************************************* //

functions
{
	forceCoeffs
	{
		type    forceCoeffs;
		libs    (forces);
		patches (cylinder);

		log no; //no or yes
		
		rho rhoInf;
		rhoInf 1;
		
		pName p;
		UName U;
		
		liftDir     (0 1 0);
		dragDir     (1 0 0);
		CofR        (0 0 0);
		pitchAxis   (0 0 1);
		magUInf     $u_inf;
		lRef        $L;
		Aref        #calc "$L*$D";
	}
}
